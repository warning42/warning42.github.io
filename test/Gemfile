  gem 'jekyll-algolia', '~> 1.0'
  gem 'tzinfo'
  gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw]
  gen 'jekyll-sitemap'
end

gem "wdm", "~> 0.1.0" if Gem.win_platform?
